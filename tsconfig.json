{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "src",
      "examples",
      "generated"
    ]
  },
  "include": [
    "src/**/*",
    "examples/**/*"
  ]
}
